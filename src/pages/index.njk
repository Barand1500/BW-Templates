{% extends "base.njk" %}

{% block content %}
    {# Header Component #}
    {% set navItems = [
        { label: "Home", url: "#" },
        { label: "Components", url: "#components" },
        { label: "Docs", url: "#docs" },
        { label: "Github", url: "#" }
    ] %}
    {% set variant = "light" %}
    {% include "header.njk" %}
    
    {# Hero Component #}
    {% set title = "Build Beautiful Static Sites Faster" %}
    {% set subtitle = "A powerful component-based template system with dark mode, animations, and 11+ ready-to-use components." %}
    {% set variant = "split" %}
    <div data-animate="fade">
        {% include "hero.njk" %}
    </div>
    
    {# Features Component #}
    {% set variant = "grid" %}
    {% set items = [
        { title: "11+ Components", desc: "Header, Hero, Footer, Cards, Blog, Testimonials, Pricing, and more.", icon: "ðŸŽ¨" },
        { title: "Dark Mode", desc: "Built-in theme system with automatic persistence and smooth transitions.", icon: "ðŸŒ“" },
        { title: "Animations", desc: "Scroll animations, parallax effects, and smooth transitions out of the box.", icon: "âœ¨" },
        { title: "Responsive", desc: "Mobile-first design ensures perfect display on all screen sizes.", icon: "ðŸ“±" },
        { title: "Fast Performance", desc: "Zero runtime dependencies. Pure static HTML/CSS for blazing speed.", icon: "âš¡" },
        { title: "Easy Customization", desc: "CSS variables and BEM methodology make styling a breeze.", icon: "ðŸŽ¯" }
    ] %}
    <div data-animate="slide-up">
        {% include "features.njk" %}
    </div>

    {# Card Grid Demo #}
    <section style="padding: 5rem 0; background: #f8f9fa;">
        <div style="max-width: 1200px; margin: 0 auto; padding: 0 1.5rem;">
            <h2 style="text-align: center; font-size: 2.5rem; margin-bottom: 3rem; font-weight: 800;">
                Component Showcase
            </h2>
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem;">
                {% set variant = "default" %}
                {% set title = "Easy to Use" %}
                {% set description = "Simple Nunjucks templates with inline CSS. No complex build tools required." %}
                {% set image = "" %}
                <div data-animate="scale">
                    {% include "card.njk" %}
                </div>
                
                {% set variant = "featured" %}
                {% set title = "Production Ready" %}
                {% set description = "Battle-tested components ready for your next project. Just copy and customize." %}
                <div data-animate="scale" style="animation-delay: 100ms;">
                    {% include "card.njk" %}
                </div>
                
                {% set variant = "default" %}
                {% set title = "Well Documented" %}
                {% set description = "Comprehensive documentation with examples and best practices included." %}
                <div data-animate="scale" style="animation-delay: 200ms;">
                    {% include "card.njk" %}
                </div>
            </div>
        </div>
    </section>

    {# Testimonials Component #}
    {% set variant = "grid" %}
    <div data-animate="slide-up">
        {% include "testimonials.njk" %}
    </div>

    {# Pricing Component #}
    {% set variant = "simple" %}
    <div data-animate="slide-up">
        {% include "pricing.njk" %}
    </div>

    {# Newsletter Component #}
    {% set variant = "gradient" %}
    {% set title = "Stay in the Loop" %}
    {% set description = "Get updates about new components, features, and best practices." %}
    <div data-animate="fade">
        {% include "newsletter.njk" %}
    </div>

    {# CTA Component #}
    {% set variant = "card" %}
    {% set title = "Ready to Build Something Amazing?" %}
    <div data-animate="slide-up">
        {% include "cta.njk" %}
    </div>

    {# Footer Component #}
    {% set variant = "mega" %}
    {% include "footer.njk" %}
{% endblock %}
