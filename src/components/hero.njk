{# 
    Component: Hero
    Variables:
    - title: string
    - subtitle: string
    - ctaLabel: string
    - variant: 'centered' | 'split'
#}

<section class="c-hero c-hero--{{ variant | default('centered') }}">
    <div class="c-hero__container">
        <div class="c-hero__content">
            <h1 class="c-hero__title">{{ title | default("Design Your Future") }}</h1>
            <p class="c-hero__subtitle">{{ subtitle | default("The most powerful static template system for single developers.") }}</p>
            <div class="c-hero__actions">
                <a href="#" class="c-hero__btn c-hero__btn--primary">{{ ctaLabel | default("Explore Now") }}</a>
                <a href="#" class="c-hero__btn c-hero__btn--secondary">Learn More</a>
            </div>
        </div>
        {% if variant == 'split' %}
        <div class="c-hero__visual">
            <div class="c-hero__box"></div>
        </div>
        {% endif %}
    </div>
</section>

<style>
    .c-hero {
        padding: 6rem 0;
        background: #f8f9fa;
        color: #212529;
        overflow: hidden;
    }

    .c-hero__container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .c-hero--centered {
        text-align: center;
    }

    .c-hero--split .c-hero__container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        align-items: center;
        gap: 4rem;
        text-align: left;
    }

    .c-hero__title {
        font-size: 3.5rem;
        line-height: 1.1;
        font-weight: 800;
        margin-bottom: 1.5rem;
        letter-spacing: -2px;
    }

    .c-hero__subtitle {
        font-size: 1.25rem;
        color: #6c757d;
        margin-bottom: 2.5rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .c-hero--split .c-hero__subtitle {
        margin-left: 0;
    }

    .c-hero__actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .c-hero--split .c-hero__actions {
        justify-content: flex-start;
    }

    .c-hero__btn {
        padding: 0.8rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: background 0.2s, transform 0.2s;
    }

    .c-hero__btn--primary {
        background: #212529;
        color: white;
    }

    .c-hero__btn--primary:hover {
        background: #000;
        transform: translateY(-3px);
    }

    .c-hero__btn--secondary {
        border: 2px solid #dee2e6;
        color: #212529;
    }

    .c-hero__btn--secondary:hover {
        background: #e9ecef;
    }

    .c-hero__visual {
        position: relative;
    }

    .c-hero__box {
        width: 100%;
        height: 400px;
        background: linear-gradient(45deg, #007bff, #6610f2);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    }
</style>
