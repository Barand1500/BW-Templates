{# 
    Component: Card
    Variables:
    - title: string
    - description: string
    - image: string
    - link: string
    - variant: 'default' | 'featured' | 'horizontal'
#}

<div class="c-card c-card--{{ variant | default('default') }}">
    {% if image %}
    <div class="c-card__image">
        <img src="{{ image }}" alt="{{ title }}" />
    </div>
    {% endif %}
    <div class="c-card__content">
        <h3 class="c-card__title">{{ title | default("Card Title") }}</h3>
        <p class="c-card__description">{{ description | default("This is a card description that provides more details about the content.") }}</p>
        {% if link %}
        <a href="{{ link }}" class="c-card__link">Learn More â†’</a>
        {% endif %}
    </div>
</div>

<style>
    .c-card {
        background: #ffffff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .c-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 24px rgba(0,0,0,0.12);
    }

    .c-card__image {
        width: 100%;
        height: 220px;
        overflow: hidden;
        background: #f0f0f0;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .c-card__image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .c-card:hover .c-card__image img {
        transform: scale(1.1);
    }

    .c-card__content {
        padding: 1.5rem;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .c-card__title {
        font-size: 1.25rem;
        font-weight: 700;
        margin: 0 0 1rem 0;
        color: #212529;
    }

    .c-card__description {
        color: #6c757d;
        line-height: 1.6;
        margin: 0 0 1.5rem 0;
        flex: 1;
    }

    .c-card__link {
        color: #007bff;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.2s;
        display: inline-block;
    }

    .c-card__link:hover {
        color: #0056b3;
        text-decoration: underline;
    }

    /* Featured Variant */
    .c-card--featured {
        border: 2px solid #007bff;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .c-card--featured .c-card__title {
        color: white;
    }

    .c-card--featured .c-card__description {
        color: rgba(255,255,255,0.9);
    }

    .c-card--featured .c-card__link {
        color: white;
        font-weight: 700;
    }

    /* Horizontal Variant */
    .c-card--horizontal {
        flex-direction: row;
    }

    .c-card--horizontal .c-card__image {
        width: 40%;
        height: auto;
        min-height: 100%;
    }

    .c-card--horizontal .c-card__content {
        width: 60%;
    }

    @media (max-width: 768px) {
        .c-card--horizontal {
            flex-direction: column;
        }

        .c-card--horizontal .c-card__image,
        .c-card--horizontal .c-card__content {
            width: 100%;
        }

        .c-card--horizontal .c-card__image {
            height: 220px;
        }
    }
</style>
