{# 
    Component: Newsletter
    Variables:
    - title: string
    - description: string
    - placeholder: string
    - buttonText: string
    - variant: 'minimal' | 'boxed' | 'gradient'
#}

<section class="c-newsletter c-newsletter--{{ variant | default('minimal') }}">
    <div class="c-newsletter__container">
        <div class="c-newsletter__content">
            <h2 class="c-newsletter__title">{{ title | default("Stay Updated") }}</h2>
            <p class="c-newsletter__description">{{ description | default("Subscribe to our newsletter and never miss our latest updates.") }}</p>
        </div>
        <form class="c-newsletter__form">
            <input 
                type="email" 
                class="c-newsletter__input" 
                placeholder="{{ placeholder | default('Enter your email...') }}" 
                required 
            />
            <button type="submit" class="c-newsletter__button">
                {{ buttonText | default("Subscribe") }}
            </button>
        </form>
        <p class="c-newsletter__privacy">We respect your privacy. Unsubscribe at any time.</p>
    </div>
</section>

<style>
    .c-newsletter {
        padding: 4rem 0;
        background: #ffffff;
    }

    .c-newsletter__container {
        max-width: 600px;
        margin: 0 auto;
        padding: 0 1.5rem;
        text-align: center;
    }

    .c-newsletter__title {
        font-size: 2rem;
        font-weight: 800;
        margin-bottom: 1rem;
        color: #212529;
        letter-spacing: -0.5px;
    }

    .c-newsletter__description {
        font-size: 1.1rem;
        color: #6c757d;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    .c-newsletter__form {
        display: flex;
        gap: 0.75rem;
        margin-bottom: 1rem;
    }

    .c-newsletter__input {
        flex: 1;
        padding: 1rem 1.25rem;
        border: 2px solid #e9ecef;
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.2s;
        background: #ffffff;
    }

    .c-newsletter__input:focus {
        outline: none;
        border-color: #007bff;
        box-shadow: 0 0 0 3px rgba(0,123,255,0.1);
    }

    .c-newsletter__button {
        padding: 1rem 2rem;
        background: #007bff;
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.2s;
        white-space: nowrap;
    }

    .c-newsletter__button:hover {
        background: #0056b3;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(0,123,255,0.3);
    }

    .c-newsletter__privacy {
        font-size: 0.875rem;
        color: #868e96;
        margin: 0;
    }

    /* Boxed Variant */
    .c-newsletter--boxed {
        background: #f8f9fa;
    }

    .c-newsletter--boxed .c-newsletter__container {
        background: white;
        padding: 3rem 2rem;
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.08);
    }

    /* Gradient Variant */
    .c-newsletter--gradient {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .c-newsletter--gradient .c-newsletter__title {
        color: white;
    }

    .c-newsletter--gradient .c-newsletter__description {
        color: rgba(255,255,255,0.9);
    }

    .c-newsletter--gradient .c-newsletter__input {
        border-color: rgba(255,255,255,0.3);
        background: rgba(255,255,255,0.95);
    }

    .c-newsletter--gradient .c-newsletter__button {
        background: rgba(255,255,255,0.2);
        backdrop-filter: blur(10px);
        border: 2px solid white;
    }

    .c-newsletter--gradient .c-newsletter__button:hover {
        background: white;
        color: #667eea;
    }

    .c-newsletter--gradient .c-newsletter__privacy {
        color: rgba(255,255,255,0.8);
    }

    @media (max-width: 768px) {
        .c-newsletter__form {
            flex-direction: column;
        }

        .c-newsletter__button {
            width: 100%;
        }
    }
</style>
