{# 
    Component: Stats/Counter
    Variables:
    - stats: array of { value: string, label: string, icon: string }
    - variant: 'default' | 'gradient' | 'minimal'
#}

<section class="c-stats c-stats--{{ variant | default('default') }}">
    <div class="c-stats__container">
        <div class="c-stats__grid">
            {% for stat in stats | default([
                { value: "10K+", label: "Active Users", icon: "üë•" },
                { value: "50+", label: "Countries", icon: "üåç" },
                { value: "99%", label: "Satisfaction", icon: "‚≠ê" },
                { value: "24/7", label: "Support", icon: "üí¨" }
            ]) %}
            <div class="c-stats__item">
                <div class="c-stats__icon">{{ stat.icon }}</div>
                <div class="c-stats__value">{{ stat.value }}</div>
                <div class="c-stats__label">{{ stat.label }}</div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<style>
    .c-stats {
        padding: 4rem 0;
        background: white;
    }

    .c-stats__container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .c-stats__grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
    }

    .c-stats__item {
        text-align: center;
        padding: 2rem;
        background: #f8f9fa;
        border-radius: 12px;
        transition: all 0.3s;
    }

    .c-stats__item:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    }

    .c-stats__icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .c-stats__value {
        font-size: 2.5rem;
        font-weight: 800;
        color: #007bff;
        margin-bottom: 0.5rem;
    }

    .c-stats__label {
        font-size: 1rem;
        color: #6c757d;
        font-weight: 600;
    }

    /* Gradient Variant */
    .c-stats--gradient .c-stats__item {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .c-stats--gradient .c-stats__value {
        color: white;
    }

    .c-stats--gradient .c-stats__label {
        color: rgba(255,255,255,0.9);
    }

    /* Minimal Variant */
    .c-stats--minimal .c-stats__item {
        background: transparent;
        border: 2px solid #e9ecef;
    }

    .c-stats--minimal .c-stats__item:hover {
        border-color: #007bff;
        background: #f8f9fa;
    }

    @media (max-width: 768px) {
        .c-stats__grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
        }

        .c-stats__item {
            padding: 1.5rem 1rem;
        }

        .c-stats__icon {
            font-size: 2rem;
        }

        .c-stats__value {
            font-size: 2rem;
        }
    }
</style>
