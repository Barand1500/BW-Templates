{# 
    Component: Footer
    Variables:
    - copyright: string
    - links: array of { label: string, url: string }
    - variant: 'simple' | 'mega'
#}

<footer class="c-footer c-footer--{{ variant | default('simple') }}">
    <div class="c-footer__container">
        {% if variant == 'mega' %}
        <div class="c-footer__grid">
            <div class="c-footer__column">
                <h4 class="c-footer__title">Product</h4>
                <ul class="c-footer__list">
                    <li><a href="#" class="c-footer__link">Features</a></li>
                    <li><a href="#" class="c-footer__link">Templates</a></li>
                    <li><a href="#" class="c-footer__link">Integrations</a></li>
                </ul>
            </div>
            <div class="c-footer__column">
                <h4 class="c-footer__title">Company</h4>
                <ul class="c-footer__list">
                    <li><a href="#" class="c-footer__link">About Us</a></li>
                    <li><a href="#" class="c-footer__link">Blog</a></li>
                    <li><a href="#" class="c-footer__link">Contact</a></li>
                </ul>
            </div>
            <div class="c-footer__column">
                <h4 class="c-footer__title">Legal</h4>
                <ul class="c-footer__list">
                    <li><a href="#" class="c-footer__link">Privacy</a></li>
                    <li><a href="#" class="c-footer__link">Terms</a></li>
                </ul>
            </div>
        </div>
        {% endif %}
        
        <div class="c-footer__bottom">
            <p class="c-footer__copyright">&copy; {{ copyright | default("2024 StaticRepo. All rights reserved.") }}</p>
            <div class="c-footer__social">
                <a href="#" class="c-footer__icon">Twitter</a>
                <a href="#" class="c-footer__icon">GitHub</a>
            </div>
        </div>
    </div>
</footer>

<style>
    .c-footer {
        background: #1a1a1a;
        color: #f8f9fa;
        padding: 4rem 0 2rem;
        font-family: inherit;
    }

    .c-footer__container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .c-footer__grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 3rem;
        margin-bottom: 3rem;
        border-bottom: 1px solid #333;
        padding-bottom: 3rem;
    }

    .c-footer__title {
        font-size: 1.1rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        color: #fff;
    }

    .c-footer__list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .c-footer__list li {
        margin-bottom: 0.8rem;
    }

    .c-footer__link {
        color: #888;
        text-decoration: none;
        transition: color 0.2s;
        font-size: 0.9rem;
    }

    .c-footer__link:hover {
        color: #fff;
    }

    .c-footer__bottom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        opacity: 0.6;
    }

    .c-footer--simple {
        padding: 2rem 0;
    }

    .c-footer--simple .c-footer__bottom {
        justify-content: center;
        flex-direction: column;
        gap: 1rem;
    }

    .c-footer__social {
        display: flex;
        gap: 1.5rem;
    }

    .c-footer__icon {
        color: inherit;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .c-footer__icon:hover {
        text-decoration: underline;
    }

    @media (max-width: 768px) {
        .c-footer__bottom {
            flex-direction: column;
            text-align: center;
            gap: 1.5rem;
        }
    }
</style>
